  


<div class="mt-16 max-w-xl mx-auto">
  <header class="flex justify-between">
    <h1 class="text-3xl mb-4">Tasks</h1>

    <div>
      <%= link_to "Add", new_task_path, class: "btn btn--primary" %>
    </div>
  </header>

  <table class="table">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Description</th>
            <th>Credits</th>
            <th>Status</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <%= content_tag :tr, id: dom_id(task) do %>
          

                      <td><%= task.title %></td>
                      <td><%= task.description %></td>
                      <td><%= task.credits %></td>
                      <td><%= task.status %></td>
          
          
            <td><%= link_to "Show", task %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

