  <div class="mt-16 max-w-xl mx-auto">
  <header class="flex justify-between">
    <h1 class="text-3xl mb-4">Show task</h1>

    <div>
      <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn--primary' %>
    </div>
  </header>

    <div class="flex">
      <h2 class="w-full sm:w-1/4">Title:</h2>
      <p class="w-full sm:w-3/4"><%= @task.title %></p>
    </div>
    <div class="flex">
      <h2 class="w-full sm:w-1/4">Description:</h2>
      <p class="w-full sm:w-3/4"><%= @task.description %></p>
    </div>
    <div class="flex">
      <h2 class="w-full sm:w-1/4">Credits:</h2>
      <p class="w-full sm:w-3/4"><%= @task.credits %></p>
    </div>
    <div class="flex">
      <h2 class="w-full sm:w-1/4">Status:</h2>
      <p class="w-full sm:w-3/4"><%= @task.status %></p>
    </div>
</div>

